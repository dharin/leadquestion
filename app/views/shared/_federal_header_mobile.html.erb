	<script type="text/javascript">
		jQuery(document).ready(function(){

			$('#us_citizen').hide();
			$('#interest_military').hide();
			$("#affiliated").hide();
			$("#military_affiliation").hide();
			$("#branch").hide();
			
			/* There are two problems with this code:
				(1) When in Kaplan form, if you go back and 'uncheck' options nothing happens
				(2) An unlabeled checkbox is perhaps not as clear as Yes/No things you can check. One solution:
				change field label to 'Check box if ... ' rather than the 'Are you ... ' that was designed to work with 'yes'/'No' radio buttons. 
				(3) When get to 2nd school, the 1st question is checked, but none of the others are visible (because, of course,
				no 'on change' event has fired )
				
				Explore collection with Yes No elements displayed as radio buttons as in Nursing
			*/
				
					
			$('#interest_title4').change(function(){
				var x = $('#student_financial_aid').val(); 				
				if (x == "1") { 
					$('#us_citizen').show('fast');
					$('#interest_military').show('fast');
				};
				/* I tried:
				if $('#student_financial_aid:checked') { ...};
				if $('#student_financial_aid'.is(:checked)) { ...}
				Both showed all checkbox options on the first plus first drop-down select.  I don't know why. 
				*/
				
			});
			$('#interest_military').change(function(){
				var x = $('#student_military_tuition_assistance').val(); /* the id is generated by simple-form */
				if (x == "1" ){
					$('#military_affiliation').show('fast'); 	
				};
			
			});
			$('#affiliated').change(function(){
				var x = $('#student_affiliated_with_us_military').val(); /* the id is genereated by simple-form */
				if (x == "1" ){ 
					$('#military_affiliation').show('fast');
				};
				 				
			});
			$('#military_affiliation').change(function(){
				$('#branch').show('fast');
			});
		
			
		});
	</script>


